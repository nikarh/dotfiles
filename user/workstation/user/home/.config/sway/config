set $ws1 "1:  "
set $ws2 "2:  "
set $ws3 "3:  "
set $ws4 "4:  "
set $ws5 "5:  "
set $ws6 "6:  "
set $ws7 "7:  "
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Input devices
input type:keyboard {
    xkb_layout "lv,ru"
    xkb_options "grp:alt_shift_toggle,grp_led:scroll"
    repeat_delay 200
    repeat_rate 60
}

input type:touchpad {
    tap enabled
}

input "pointer:MSI Gaming Mouse" pointer_accel 0.9
input "ImPS/2 Logitech Wheel Mouse" pointer_accel 0.5

# Output devices
output * allow_tearing yes
output * max_render_time off

# Fix GTK theme 
exec_always ~/.config/sway/import-gsettings.sh

# Fix output settings on config reload
exec_always shikane -o

# https://github.com/swaywm/sway/wiki#gtk-applications-take-20-seconds-to-start
exec systemctl --user import-environment \
    DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP=sway
exec hash dbus-update-activation-environment 2>/dev/null && dbus-update-activation-environment --systemd \
    DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP=sway

exec shikane # autorandr
exec swayidle -w before-sleep 'swaylock' # autolock
exec dunst # notifications
exec wl-clip-persist --clipboard regular # clipboard outlives app
exec joystickwake # dont lock when playing with gamepad
exec systemctl start --user xdg-desktop-portal-wlr # screen sharing

# Apps
exec blueman-applet
exec nm-applet --indicator
exec pasystray
exec systemctl start --user sunshine

# Start main terminal
exec alacritty -t "Main terminal" -e systemd-run --scope --user tmux new-session -A -s main

# Unclutter
seat seat0 hide_cursor 3000

seat seat0 xcursor_theme Dracula-cursors 32

output "*" bg "/usr/share/backgrounds/wallpaper.png" fit

bindsym XF86AudioPlay exec "betterlockscreen -l dim"
bindsym XF86AudioStop exec "dm-tool switch-to-greeter"
bindsym XF86AudioRaiseVolume exec ~/.local/bin/volume-control.sh raise
bindsym XF86AudioLowerVolume exec ~/.local/bin/volume-control.sh lower
bindsym XF86AudioMute exec ~/.local/bin/volume-control.sh mute
bindsym XF86AudioMicMute exec "~/.local/bin/volume-control.sh mic-mute"
bindsym XF86MonBrightnessUp exec ~/.local/bin/backlight-control.sh raise
bindsym XF86MonBrightnessDown exec ~/.local/bin/backlight-control.sh lower
bindsym XF86TouchpadToggle exec ~/.local/bin/toggle-touchpad.sh
bindsym Print exec grim -g "$(slurp -d)" - | wl-copy -t image/png
bindsym Control+Print exec flameshot screen

# i3 config file (v4)
set $mod Mod4

font pango:Cantarell 12

# class                 border  backgr. text    indicator child_border
client.focused          #44475A #44475A #F8F8F2 #44475A   #44475A
client.focused_inactive #44475A #44475A #F8F8F2 #44475A   #44475A
client.unfocused        #303240 #303240 #BFBFBF #303240   #303240
client.urgent           #44475A #44475A #F8F8F2 #44475A   #44475A
client.placeholder      #282A36 #282A36 #F8F8F2 #282A36   #282A36
client.background       #F8F8F2

focus_follows_mouse no
focus_on_window_activation focus

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

default_floating_border pixel 1


bindsym $mod+Shift+q kill
bindsym $mod+Return exec "LANG=en alacritty -t Terminal -e tmux attach"
bindsym $mod+c exec --no-startup-id "pkill -x rofi; rofi -show combi -combi-modes window,drun -modes combi"
bindsym $mod+x exec --no-startup-id "pkill -x rofi; MODE_SWITCHER=true rofi -show run -terminal alacritty -font"
bindsym $mod+g exec --no-startup-id "pkill -x rofi; rofi -show emoji"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+b split h
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+Shift+s sticky toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent
bindsym $mod+d focus child

bindsym $mod+Control+Left  move workspace to output left
bindsym $mod+Control+h     move workspace to output left
bindsym $mod+Control+Right move workspace to output right
bindsym $mod+Control+l     move workspace to output right

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exec "swaynag -t warning -m 'End session?' -B 'Yes, exit' 'swaymsg exit'"

bindsym $mod+r mode "resize"

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bar {
        swaybar_command waybar
    
        # swaybar_command sw_swaybar
        # swaybar_command ""

        tray_output *
        tray_padding 10 px
        icon_theme "Dracula"

        position top

        font pango:Hack Nerd Font Propo 18

        # font Hack Nerd Font Propo:size=24
        # font monospace:size=16
        status_command i3status-rs ~/.config/sway/i3status-rs.toml
        strip_workspace_numbers yes
        tray_padding 1px
        workspace_min_width 60 px

        colors {
                background #282A36
                statusline #F8F8F2
                separator  #44475A

                focused_workspace  #44475A #44475A #F8F8F2
                active_workspace   #282A36 #44475A #F8F8F2
                inactive_workspace #282A36 #282A36 #BFBFBF
                urgent_workspace   #F8F8F2 #F8F8F2 #44475A
                binding_mode       #F8F8F2 #F8F8F2 #44475A
        }
}


