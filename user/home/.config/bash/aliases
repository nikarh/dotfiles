# vi: ft=sh

alias ls='ls --color=auto'
alias l='ls -lAh'
alias df='df -h'
alias less='less -r'
alias http-server='python -m http.server'

if type -P exa > /dev/null; then
    alias ls='exa'
    alias l='exa -la'
    alias e='exa -la'
fi

if type -P grc > /dev/null; then
    alias mount='grc mount'
    alias du='grc du'
    alias df='grc df -h'
fi
