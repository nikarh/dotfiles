# vim: ft=sh

export QT_QPA_PLATFORMTHEME=gtk2
export XDG_CURRENT_DESKTOP=gnome
export QT_AUTO_SCREEN_SCALE_FACTOR=0.99
export WINIT_HIDPI_FACTOR=1

xrdb -all -load ~/.config/Xorg/Xresources
xbindkeys -f ~/.config/Xorg/xbindkeysrc --poll-rc
compton -i 0.95 --backend glx --use-damage --no-fading-openclose -b

source ~/.config/Xorg/reset-keyboard.sh
~/.config/Xorg/udev-monitor/udev-monitor -s usb -e ~/.config/Xorg/reset-keyboard.sh &

autocutsel -fork
umonitor -n

lxsession&
